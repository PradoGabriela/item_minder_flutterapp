{
  "rules": {
    "groups": {
      "$groupId": {
        ".read": "auth != null && (data.child('members').hasChild(auth.uid) || data.child('createdBy').val() == auth.uid)",
        ".write": "auth != null && (data.child('members').hasChild(auth.uid) || data.child('createdBy').val() == auth.uid || (!data.exists() && newData.child('createdBy').val() == auth.uid))",
        "groupID": {
          ".validate": "newData.isString()"
        },
        "groupName": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
        },
        "createdBy": {
          ".validate": "newData.isString() && newData.val() == auth.uid"
        },
        "members": {
          ".validate": "newData.hasChildren()",
          "$memberId": {
            ".validate": "newData.isString()"
          }
        },
        "groupIconUrl": {
          ".validate": "newData.isString()"
        },
        "categoriesNames": {
          ".validate": "newData.hasChildren()",
          "$index": {
            ".validate": "newData.isString()"
          }
        },
        "lastUpdatedBy": {
          ".validate": "newData.isString()"
        },
        "lastUpdatedDateString": {
          ".validate": "newData.isString()"
        },
        "createdByDeviceId": {
          ".validate": "newData.isString()"
        },
        "isOnline": {
          ".validate": "newData.isBoolean()"
        },
        "itemsID": {
          "$itemId": {
            ".validate": "newData.hasChildren()",
            "itemID": {
              ".validate": "newData.isString() && newData.val() == $itemId"
            },
            "brandName": {
              ".validate": "newData.isString()"
            },
            "description": {
              ".validate": "newData.isString()"
            },
            "iconUrl": {
              ".validate": "newData.isString()"
            },
            "imageUrl": {
              ".validate": "newData.isString()"
            },
            "category": {
              ".validate": "newData.isString()"
            },
            "price": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "type": {
              ".validate": "newData.isString() && newData.val().length > 0"
            },
            "quantity": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "minQuantity": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "maxQuantity": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "isAutoAdd": {
              ".validate": "newData.isBoolean()"
            },
            "addedDateString": {
              ".validate": "newData.isString()"
            },
            "lastUpdated": {
              ".validate": "newData.isString()"
            },
            "lastUpdatedBy": {
              ".validate": "newData.isString()"
            },
            "groupID": {
              ".validate": "newData.isString() && newData.val() == $groupId"
            },
            "$other": {
              ".validate": false
            }
          }
        },
        "shoppingListID": {
          ".validate": "newData.hasChildren()",
          "$index": {
            ".validate": "newData.isNumber()"
          }
        },
        "$other": {
          ".validate": false
        }
      }
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
